<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/frame_layout"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UploadVoiceFragment">



    <!-- İçerik Alanı -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="VOICE"
                android:textColor="@color/darkBlue"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Please select and play the voice file."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Ses Dosyası Oynatma Butonu -->
            <Button
                android:id="@+id/playVoiceButton"
                android:layout_width="239dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/plato"
                android:fontFamily="@font/montserratblack"
                android:text="Play Voice"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="28dp"
                android:text="Please enter a comment about the memory."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Yorum Girişi -->
            <EditText
                android:id="@+id/commentBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text_background"
                android:hint="Enter memory description here..."
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Generate Question Butonu -->
            <Button
                android:id="@+id/generateQuestionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:padding="10dp"
                android:text="Generate Question"
                android:textColor="@android:color/white" />

            <!-- Üretilen Soruyu Gösteren TextView -->
            <TextView
                android:id="@+id/generatedQuestionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Generated question will appear here..."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <!-- Kullanıcının Cevabı İçin EditText -->
            <EditText
                android:id="@+id/answerBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text_background"
                android:hint="Enter your answer..."
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Upload Butonu -->
            <Button
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:padding="10dp"
                android:text="Upload"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
